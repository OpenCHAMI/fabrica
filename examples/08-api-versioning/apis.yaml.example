# Example apis.yaml configuration for hub/spoke API versioning
# Copy this file to apis.yaml in your project root and customize

groups:
  # API group definition
  - name: infra.example.io

    # Hub version - used for storage (must be in versions list)
    storageVersion: v1

    # All versions exposed to clients (spokes)
    # Can include alpha, beta, and stable versions
    versions:
      - v1alpha1  # Alpha: experimental, may change
      - v1beta1   # Beta: semi-stable, breaking changes announced
      - v1        # Stable: production-ready

    # Resources in this group
    resources:
      - kind: Device
        # Optional: version-specific field mappings
        # By default, uses 1:1 field mapping between versions
        # Uncomment to specify custom mappings:
        # mappings:
        #   v1alpha1:
        #     renames:
        #       - from: ipAddress
        #         to: ip

    # Optional: Import external types
    # imports:
    #   - module: github.com/yourorg/netmodel
    #     tag: v0.9.3
    #     packages:
    #       - path: api/types
    #         expose:
    #           - kind: Device
    #             specFrom: github.com/yourorg/netmodel/api/types.DeviceSpec
    #             statusFrom: github.com/yourorg/netmodel/api/types.DeviceStatus
